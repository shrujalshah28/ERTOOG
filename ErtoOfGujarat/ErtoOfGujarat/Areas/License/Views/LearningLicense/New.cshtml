@model ErtoOfGujarat.ResponceMaster

@{
    ViewBag.Title = "New";

    string uid = ViewBag.uid;
}

<h2>New</h2>

@using (Html.BeginForm("New","LearningLicense",FormMethod.Post, new { @class = "form-horizontal", role = "form" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>ResponceMaster</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.uniqueId, htmlAttributes: new { @class = "control-label col-md-2" })
